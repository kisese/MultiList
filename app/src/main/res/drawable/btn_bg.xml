<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffffff"/>
            <stroke
                android:width="0dp"
                android:color="#006a5acd"
                />
            <corners
                android:radius="0dp"/>

        </shape>
    </item>

    <item android:state_active="true">
        <shape>
            <solid
                android:color="#ffffff"/>
            <stroke
                android:width="0dp"
                android:color="#006a5acd"
                />
            <corners
                android:radius="0dp"/>

        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#ffffff"/>
            <stroke
                android:width="0dp"
                android:color="#006a5acd"
                />
            <corners
                android:radius="0dp"/>

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#6495ed"
                android:centerColor="#6495ed"
                android:endColor="#6495ed"
                android:angle="270"
                />
            <stroke
                android:width="0dp"
                android:color="#00ffffff"
                />
            <corners
                android:radius="0dp"
                />

        </shape>
    </item>
</selector>