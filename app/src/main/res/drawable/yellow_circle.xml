<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid
                android:color="#ADD8E6"/>
            <stroke
                android:width="1dp"
                android:color="#006a5acd"
                />
            <corners
                android:radius="20dp"/>

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF8C00"
                android:centerColor="#FF8C00"
                android:endColor="#FF8C00"
                android:angle="270"
                />
            <stroke
                android:width="4dp"
                android:color="#00ffffff"
                />
            <corners
                android:radius="10dp"
                />

        </shape>
    </item>
</selector>